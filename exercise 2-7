// function calculates fibonacci number
#include<iostream>
#include<cmath>
using namespace std;


int power(int a,int n){
  if(n==0)
    return 1;
  else if(n%2==0)
    return power(a,n/2)*power(a, n/2);
  return a * power(a,n/2) * power(a, n/2);
}

int main(){
  int a;
  int n;
  cout << "please input a number"<<endl;
  cin >> a;
  cout << "please input the power of this number"<<endl;
  cin >> n;
  cout << "the power of this number is " << power(a,n) << endl;
  return 0;
}
